<% if @shelter %>
  <h1> <%= "#{@shelter.name}'s Pets" %> </h1>
  <h2>Shelter ID: <%=@shelter.id%></h2>
<% else %>
  <h1>All Pets</h1>
<% end %>

<% @pets.each do |pet| %>
  <section class="grid-pet" id="pet-<%=pet.id%>">
    <img src="<%=pet.image%>"><br>
    <h2><a href="/pets/<%= pet.id %>"><%=pet.name%></a></h2>
    <p>Age: <%=pet.age%></p>
    <p>Sex: <%=pet.sex%></p>
    <p>Shelter: <%=pet.shelter.name%></p>
    <h4><a href="/pets/<%=pet.id%>/edit">Update Pet</h4><br><br>
  </section>
<% end %>

<% if @shelter %>
 <h3><a href="/shelters/<%=@shelter.id%>/pets/new">Create Pet</h3>
<%end%>
