<% if @shelter %>
  <h1> <%= "#{@shelter.name}'s Pets" %> </h1>
  <h2>Shelter ID: <%=@shelter.id%></h2>
<% else %>
  <h1>All Pets</h1>
<% end %>

<% @pets.each do |pet| %>
  <section class="grid-pet" id="pet-<%=pet.id%>">
    <img src="<%=pet.image%>"><br>
    <h2>Name: <a href="/pets/<%= pet.id %>"><%=pet.name%></a></h2>
    <h5><a href="/shelters/<%=pet.shelter.id%>"><%=pet.shelter.name%></a></h5>
    <p>Age: <%=pet.age%></p>
    <p>Sex: <%=pet.sex%></p>
    <h5><a href="/pets/<%=pet.id%>/edit">Update Pet</h5>

    <%= form_tag "/pets/#{pet.id}", method: :delete do %>
      <%= submit_tag(value="Delete Pet") %>
    <% end %>
    <br>
    <br>
  </section>
<% end %>

<% if @shelter %>
 <h3><a href="/shelters/<%=@shelter.id%>/pets/new">Create Pet</h3>
<%end%>
