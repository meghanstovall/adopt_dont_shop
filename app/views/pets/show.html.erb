<h1>Name: <%=@pet.name%></h1>
<h3>Pet ID: <%= @pet.id %></h3>

<img src="<%=@pet.image%>">
<p>Description: <%=@pet.description%></p>
<p>Age: <%= @pet.age %></p>
<p>Sex: <%= @pet.sex %></p>
<p>Status: <%= @pet.status %></p>

<a href="/pets/<%=@pet.id%>/edit">Update Pet</a><br>

<%= form_tag "/pets/#{@pet.id}", method: :delete do %>
  <%= submit_tag(value="Delete Pet") %>
<% end %>
