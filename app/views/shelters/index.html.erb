<h1>All Shelters</h1>

<% @shelters.each do |shelter| %>
<section id="shelter-<%=shelter.id%>">
  <h3><a href="/shelters/<%= shelter.id %>"><%= shelter.name %></a></h3>
  <h5><a href="/shelters/<%= shelter.id %>/edit">Update Shelter</a></h5>

  <%= form_tag "/shelters/#{shelter.id}", method: :delete do %>
    <%= submit_tag(value="Delete Shelter") %>
  <% end %>
  <br>
  <br>
</section>
<% end %>
<h4><a href="/shelters/new"> New Shelter</h4>
